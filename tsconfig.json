{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],

    "sourceMap": true,
    "esModuleInterop": true,

    "strict": false,

    // quito las banderas que te están apretando:
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
    "moduleDetection": "auto",

    // importantísimo:
    "noEmit": false,

    // opcional: si no quieres generar .d.ts aún:
    "declaration": false,
    "declarationMap": false,

    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"]
}
